<section class="show-user">
  <%= render "shared/user", :user => @user %>
  <div>
    <h5>Bio</h5>
    <p><%= @user.bio %></p>
  </div>
  
  <div>
    <% @user.fetch_recent_posts.each do |post| %>
      <ul>
        <%= render 'shared/post', :post => post %>
      </ul>
    <% end %>
  </div>
  <div class="links" >
    <button><%= link_to 'Show all Users', users_path %></button>
    <button><%= link_to 'Show all posts', user_posts_path(@user) %></button>
  </div>
</section>